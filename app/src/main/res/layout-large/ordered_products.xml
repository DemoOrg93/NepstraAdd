<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="36dp" />

    <android.support.constraint.ConstraintLayout

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="4dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintRight_toLeftOf="@+id/guideline4"
        android:background="@drawable/add_to_cart_item_background"
        android:padding="2dp"
        android:id="@+id/container_for_name_pair_price">

        <TextView
            android:id="@+id/txt_name_add_to_cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent" />



        <TextView
            android:id="@+id/txt_pairs_add_to_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 pair"
            android:background="@drawable/pair_background"
            android:textSize="16sp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/txt_price_add_to_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$100"
            android:textSize="20sp"
            android:paddingRight="8dp"
            android:gravity="center_vertical"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />


    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"
        tools:layout_editor_absoluteY="142dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="234dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline5"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"

        />

    <LinearLayout
        android:id="@+id/container_for_images"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline5"
        app:layout_constraintLeft_toLeftOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        android:background="@drawable/thin_black_rectangular_border"
        >

        <ImageView
            android:id="@+id/img_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher"

            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_proceed_add_to_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed to checkout"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:background="@drawable/add_to_cart_button_design"
        android:textColor="@color/colorAppWhite"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:paddingLeft="96dp"
        android:paddingRight="96dp"
        android:textStyle="bold"

        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toLeftOf="@+id/guideline5"
        android:layout_marginRight="0dp" />

    <Button
        android:id="@+id/btn_cancel_add_to_cart"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:background="@drawable/small_red_circle"
        android:drawableTint="@color/colorWhite"
        android:text="X"
        android:textColor="@color/colorWhite"
        android:textSize="12dp"
        android:gravity="center_horizontal|center_vertical"
        app:layout_constraintRight_toLeftOf="@+id/guideline7"
        android:layout_marginRight="0dp"
        app:layout_constraintTop_toTopOf="@+id/guideline6"
        android:layout_marginTop="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline6"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.085" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline7"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="8dp"

        android:layout_marginTop="8dp"
        android:background="@color/colorAppBlack"
        app:layout_constraintLeft_toLeftOf="@+id/container_for_name_pair_price"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:layout_constraintRight_toRightOf="@+id/container_for_images"
        android:layout_marginRight="8dp"
        android:id="@+id/view" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Subtotal"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/container_for_name_pair_price"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$100"
        android:textSize="24sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintRight_toLeftOf="@+id/container_for_images"
        android:layout_marginRight="8dp" />


</android.support.constraint.ConstraintLayout>