<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >

            <corners android:radius="120dip" />
            <gradient android:angle="-90" android:startColor="@color/colorAddToCartPairs" android:endColor="@color/colorAddToCartPairs"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >

            <corners android:radius="120dip" />
            <solid android:color="@color/colorAddToCartPairs"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="120dip" />
            <gradient android:angle="-90" android:startColor="@color/colorAddToCartPairs"  android:endColor="@color/colorAddToCartPairs" />
        </shape>
    </item>
</selector>