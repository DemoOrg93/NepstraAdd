<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="120dip" />
            <stroke android:width="1dip"
                android:color="@color/colorAddToCartRedButton" />
            <gradient android:angle="-90"
                android:startColor="@color/colorAddToCartRedButton"
                android:endColor="@color/colorAddToCartRedButton"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="120dip" />
            <stroke android:width="1dip"
                android:color="@color/colorAddToCartRedButton" />
            <solid android:color="@color/colorAddToCartRedButton"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="120dip" />
            <stroke android:width="1dip"
                android:color="@color/colorAddToCartRedButton" />
            <gradient android:angle="-90"
                android:startColor="@color/colorAddToCartRedButton"
                android:endColor="@color/colorAddToCartRedButton" />
        </shape>
    </item>
</selector>