<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >

            <stroke android:width="0.5dip" android:color="@color/colorAppBlack" />
            <gradient android:angle="-90" android:startColor="@color/colorAddToCartItemsBackground" android:endColor="@color/colorAddToCartItemsBackground"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >

            <stroke android:width="0.5dip" android:color="@color/colorAppBlack" />
            <solid android:color="@color/colorAddToCartItemsBackground"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >

            <stroke android:width="0.5dip" android:color="@color/colorAppBlack" />
            <gradient android:angle="-90" android:startColor="@color/colorAddToCartItemsBackground"  android:endColor="@color/colorAddToCartItemsBackground" />
        </shape>
    </item>
</selector>