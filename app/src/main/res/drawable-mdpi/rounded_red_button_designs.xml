<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="120dip" />
            <stroke android:width="1dip" android:color="@color/colorAppRed" />
            <gradient android:angle="-90" android:startColor="@color/colorAppRed" android:endColor="@color/colorAppRed"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="120dip" />
            <stroke android:width="1dip" android:color="@color/colorAppRed" />
            <solid android:color="@color/colorAppRed"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="120dip" />
            <stroke android:width="1dip" android:color="@color/colorAppRed" />
            <gradient android:angle="-90" android:startColor="@color/colorAppRed"  android:endColor="#ff0000" />
        </shape>
    </item>
</selector>